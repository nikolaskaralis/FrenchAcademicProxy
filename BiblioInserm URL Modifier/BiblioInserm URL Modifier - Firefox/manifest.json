{
  "manifest_version": 2,
  "name": "BiblioInserm URL Modifier",
  "version": "1.0",
  "author": "Nikolas Karalis",
  "description": "This is an extension that automatically changes the URL of publisher websites to provide access through the BiblioInserm proxy.",
  "homepage_url": "http://www.neuronaldynamics.eu",
    
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "activeTab",
    "<all_urls>",
    "http://*/*",   // Add your specific domains here
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/48.png" 
    },
    "default_title": "Your Extension"
  },
    "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  }
}
